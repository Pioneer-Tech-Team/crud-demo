// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "zod-prisma"
  output   = "./models"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  password String
  name     String
  sessions Session[]
}

model Session {
  id        Int      @id @default(autoincrement())
  sid       String   @unique
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  uid       String?
  user      User?    @relation(fields: [uid], references: [id])
}

model Accounts {
  company_group_id   Int       @id @default(autoincrement())
  company_group_name String    @db.VarChar(50)
  contact_person     String?   @db.VarChar(50)
  phone              String?   @db.VarChar(10)
  email_id           String?   @db.VarChar(100)
  entered_by         String    @db.VarChar(10)
  entry_date_time    DateTime  @default(now())
  edited_by          String?   @db.VarChar(10)
  edit_date_time     DateTime?
}

model CompanyGroup {
  id         Int       @id @default(autoincrement())
  name       String    @unique @db.VarChar(50)
  companies  Company[]
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
}

model Company {
  id               Int          @id @default(autoincrement())
  name             String       @db.VarChar(100) //ADGCF2896J
  pan              String       @unique @db.VarChar(10)
  pan_name         String       @db.VarChar(100)
  aadhar           String       @db.VarChar(12)
  gstin            String       @unique @db.VarChar(15)
  company_group_id Int
  companyGroup     CompanyGroup @relation(fields: [company_group_id], references: [id])
  created_at       DateTime     @default(now())
  updated_at       DateTime     @updatedAt
}
